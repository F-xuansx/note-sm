.wrap{
    width: 100%;
    padding-top: 50rpx;
}

.content{
    margin: 0 auto;
    width: 660rpx;
}

.header{
    position: relative;
    width: 100%;
    border-bottom: 1rpx dotted #777;
    padding-bottom: 44rpx;
}

.title{
    font-size: 50rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.note{
    font-size: 30rpx;
    color: #777;
}

.brand{
    /* width: auto; */
    /* height: 100%;
     */
    max-height: 120rpx;
    max-width: 120rpx;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.list{
    margin-bottom: 20rpx;
}

.item{
    display: flex;
    position: relative;
    padding: 15rpx 0;
}

.item image{
    width: 50rpx;
    height: 50rpx;
}

.item view{
    height: 50rpx;
}

.scroller{
    font-size: 0;
    white-space: nowrap;
} 

.pic-wrap{
    width: 500rpx;
    height: 200rpx;
    display: inline-block;
} 

.pic-wrap image{
    width: 100%;
    height: 100%;
}

.iconfont{
    margin-right: 15rpx;
}

.icon-go{
    height: 100%;
    color: #777;
}

.text{
    flex: 1;
}